<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.admin.repository.UserDao">
    <resultMap id="UserMap" type="User">
        <id column="user_no" property="userNo"/>
        <result column="email" property="email"/>
        <result column="name" property="name"/>
        <result column="password" property="password"/>
        <result column="enable" property="enable"/>
        <result column="created_date" property="regDate"/>

        <association property="role" javaType="Role">
            <id column="role_no" property="roleNo"/>
            <result column="role_name" property="roleName"/>
        </association>
    </resultMap>

    <insert id="add" parameterType="User"
    useGeneratedKeys="true" keyColumn="user_no" keyProperty="userNo">
        INSERT INTO user(name, email, password)
        VALUES(#{name}, #{email},#{password})
    </insert>

    <insert id="addRole">
        INSERT INTO user_role(user_no, role_no)
        VALUES(#{userNo}, 2)
    </insert>

    <select id="findByEmailAndPassword" resultMap="UserMap">
        SELECT user_no, email,  FROM user
        WHERE email = #{email} AND password = #{password}
    </select>

</mapper>

