<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.admin.repository.AdminDao">
    <resultMap id="AdminMap" type="Admin">
        <id column="admin_no" property="no"/>
        <result column="id" property="id"/>
        <result column="password" property="password"/>
        <result column="authority" property="authority"/>
    </resultMap>

    <insert id="add" parameterType="Admin">
        INSERT INTO admin(id, password, authority)
        VALUES(#{id},sha2(#{password}, 256), #{authority})
    </insert>

    <select id="findByIdAndPassword" resultMap="AdminMap">
        SELECT admin_no, id, authority FROM admin
        WHERE id = #{id} AND password = sha2(#{password}, 256)
    </select>
</mapper>

