<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="salaba.dao.QuestionDao">

  <resultMap id="QuestionMap" type="Question">
    <id column="question_no" property="questionNo"/>
    <result column="member_no" property="no"/>
    <result column="title" property="title"/>
    <result column="content" property="content"/>
    <result column="state" property="state"/>
    <result column="state_nm" property="stateNm"/>
    <result column="register_date" property="registerDate"/>
  </resultMap>

  <resultMap id="QnaMap" type="Qna">
    <id column="question_no" property="questionNo"/>
    <result column="answer" property="answer"/>
    <result column="answer_date" property="answerDate"/>
  </resultMap>

  <insert id="questionAdd" parameterType="Question">
    insert into question(member_no,title,content)
    values(#{no},#{title}, #{content})
  </insert>

  <select id="findAll" resultMap="QuestionMap">
    select
      question_no,
      member_no,
      title,
      case when state = '0' then '미답변'
           when state = '1' then '답변완료'
           else ''
      end as state,
      register_date
    from
      question
    where
      member_no=#{no}
    order by
      register_date desc
  </select>

  <select id="findBy" resultMap="QuestionMap" parameterType="int">
    select
      question_no,
      title,
      content,
      state,
      register_date
    from
      question
    where
      question_no=#{value}
  </select>

  <update id="questionUpdate" parameterType="Question">
  update
    question
  set
    title=#{title},
    content=#{content}
  where
    question_no=#{no}
</update>

  <select id="getAnswer" resultMap="QnaMap" parameterType="int">
    select
      question_no,
      answer,
      answer_date
    from
      qna
    where
      question_no=#{value}
  </select>
</mapper>