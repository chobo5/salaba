<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="salaba.dao.CommentDao">

  <!-- 댓글 -->
  <resultMap id="CommentMap" type="Comment">
    <id column="comment_no" property="commentNo"/>
    <result column="content" property="content"/>
    <result column="created_date" property="createdDate"/>
    <result column="state" property="state"/>

    <!-- 회원정보 가져오기 -->
   <association property="writer" javaType="Member">
     <id column="member_no" property="no"/>
     <result column="nickname" property="nickname"/>
     <result column="photo" property="photo"/>
   </association>

    <!-- 게시판 정보 가져오기 -->
   <association property="board" javaType="Board">
    <id column="board_no" property="boardNo"/>
   </association>
  </resultMap>

  <!-- 댓글 작성 -->
  <insert id="addComment" parameterType="Comment"
    useGeneratedKeys="true" keyColumn="comment_no" keyProperty="commentNo">
    insert into comment(writer,content,board_no)
    values(#{writer.no},#{content},#{boardNo})
  </insert>

  <!-- 댓글 삭제 -->
  <update id="deleteComment">
    update comment set
    state='1'
    where
    comment_no=#{commentNo}
  </update>

  <!-- 게시판 번호로 댓글 찾기 -->
  <select id="findAll" resultMap="CommentMap">
    select
      b.board_no,
      c.comment_no,
      c.content,
      c.created_date,
      m.member_no,
      m.nickname,
      m.photo
    from
     comment c
    inner join member m on c.member_no=m.member_no
    left join board b on c.board_no=b.board_no
    where
      b.board_no=#{boardNo}
    order by
      c.created_date desc
  </select>


  <update id="update" parameterType="Comment">
    update board set
    content=${content}
    where
    comment_no=${commentNo}
  </update>

</mapper>
