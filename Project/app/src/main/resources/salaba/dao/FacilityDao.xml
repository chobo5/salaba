<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="salaba.dao.HostDao">

  <resultMap id="FacilityMap" type="RentalHomeFacility">
    <id column="facility_no" property="facilityNo"/>
    <result column="facility_name" property="facilityName"/>
  </resultMap>

  <insert id="addFacility" parameterType="RentalHomeDetail">
    insert into rental_home_detail(
      rental_home_no,
      facility_no,
      facility_count
    ) values
    (
      #{rentalHomeNo},
      #{facilityNo},
      #{facilityCount}
    );
  </insert>

  <select id="findAllFacility" resultMap="FacilityMap">
    select
    facility_no,
    facility_name
    from
    rental_home_facility
  </select>


</mapper>