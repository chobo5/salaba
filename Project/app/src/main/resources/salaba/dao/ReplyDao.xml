<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="salaba.dao.ReplyDao">

  <resultMap id="ReplyMap" type="Reply">
    <id column="reply_no" property="replyNo"/>
    <result column="content" property="content"/>
    <result column="created_date" property="createdDate"/>
    <result column="state" property="state"/>

    <association property="writer" javaType="Member">
     <id column="member_no" property="no"/>
     <result column="nickname" property="nickname"/>
     <result column="photo" property="photo"/>
   </association>

    <association property="comment" javaType="Comment">
      <id column="comment_no" property="commentNo"/>
    </association>
  </resultMap>

  <!-- 답글 작성-->
  <insert id="addComment" parameterType="Reply"
    useGeneratedKeys="true" keyColumn="reply_no" keyProperty="replyNo">
    insert into reply(comment_no,writer,content)
    values(#{commentNo},#{writer.no},#{content})
  </insert>

  <!-- 답글 삭제-->
  <update id="deleteComment">
    update
    reply
    set
    state='1'
    where
    reply_no=#{replyNo}
  </update>

  <select id="findAll" resultMap="ReplyMap">
    select
    c.comment_no,
    r.reply_no,
    r.content,
    r.created_date,
    m.member_no,
    m.nickname,
    m.photo
    from
    reply r
    inner join member m on r.member_no=m.member_no
    left join comment c on r.comment_no=c.comment_no
    where
    c.comment_no=#{commentNo}
    order by
    r.created_date desc
  </select>

  <update id="update" parameterType="Reply">
    update board set
    content=${content}
    where
    reply_no=${replyNo}
  </update>

</mapper>
